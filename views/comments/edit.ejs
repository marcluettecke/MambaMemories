<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/memories/<%= memory_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
                </div>
                <form-group>
                    <button class="btn btn-primary btn-lg btn-default btn-block">Submit!</button>
                </form-group>
            </form>

            <a href="/memories">Go back</a>
        </div>
    </div>

</div>
<%- include ("../partials/footer") %>
