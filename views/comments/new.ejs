<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= memory.name %></h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/memories/<%= memory._id%>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <form-group>
                    <button class="btn btn-primary btn-lg btn-default btn-block">Submit!</button>
                </form-group>
            </form>

            <a href="/memories">Go back</a>
        </div>
    </div>

</div>
<%- include ("../partials/footer") %>
