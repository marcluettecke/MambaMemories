<%- include ("../partials/header") %>
<div class="container"></div>
<div class="row">
    <div class="col-md-3">
        <p class="lead">Mamba memories</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="thumbnail">
            <img class="image-responsive" src="<%= memory.image %>" alt="">
            <div class="caption-full caption">
                <h4 class="pull-right"><%= moment(memory.date).format("dddd, MMMM Do YYYY") %></h4>
                <h4><a href="#"><%= memory.name %></a></h4>
                <p><%= memory.description %>
                <div class="pull-right">
                    <button type="button" class="btn btn-xs btn-primary" data-toggle="modal"
                            data-target="#memoryLikes">
                        <span>Total likes: <i class="fas fa-thumbs-up"></i> <%= memory.likes.length %></span>
                    </button>
                </div>
                </p>
                <p>
                    <em>Submitted by <%= memory.author.username %>, <%= moment(memory.createdAt).fromNow() %> </em>
                </p>
                <% if (currentUser && memory.author.id.equals(currentUser._id)) { %>
                    <a class="btn btn-xs btn-warning" href="/memories/<%= memory._id %>/edit">Edit</a>
                    <form class="delete-form" action="/memories/<%= memory._id %>?_method=DELETE" method="post">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                <% } %>
                <div class="like-button">
                    <form action="/memories/<%= memory._id %>/like" method="POST">
                        <div class="btn-group">
                            <% if (currentUser && memory.author.id.equals(currentUser._id)) { %>
                                <% if (currentUser && memory.likes.some(function (like) {
                                    return like.equals(currentUser._id)
                                })) { %>

                                    <button class="btn btn-sm btn-primary ">
                                        <i class="fas fa-thumbs-up"></i> Liked (<%= memory.likes.length %>)
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-sm btn-secondary">
                                        <i class="fas fa-thumbs-up"></i> Like (<%= memory.likes.length %>)
                                    </button>
                                <% } %>
                            <% } %>
<!--                            <button type="button" class="btn btn-sm btn-default" data-toggle="modal"-->
<!--                                    data-target="#memoryLikes">See more details-->
<!--                            </button>-->
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="well">
            <div class="text-right">
                <a class="btn btn-success" href="/memories/<%= memory._id %>/comments/new">Post a comment</a>
            </div>
            <hr>
            <% memory.comments.forEach((comment) => { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                            <a href="/memories/<%= memory._id %>/comments/<%= comment._id %>/edit" class="btn btn-xs
                            btn-warning">Edit</a>
                            <form class="delete-form" action="/memories/<%= memory._id %>/comments/<%= comment._id
                            %>?_method=DELETE"
                                  method="post">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>


<!-- Campground Likes Modal -->
<div id="memoryLikes" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Memory likes: <%= memory.likes.length %></h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Liked by:</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% memory.likes.forEach(function(like) { %>
                        <tr>
                            <td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
                        </tr>
                    <% }); %>
                    <% if (memory.likes.length === 0) { %>
                        <tr>
                            <td><em>No likes yet.</em></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>
